generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(cuid())
  email        String @unique
  name         String
  role         String
  passwordHash String

  @@map("users")
}

model Booking {
  id            String    @id @default(cuid())
  customerName  String
  customerEmail String
  day           String
  time          String
  bookedAt      DateTime  @default(now())
  rating        Int?
  comment       String?
  ratedAt       DateTime?

  @@map("bookings")
}

model Setting {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String // <-- solo String, SIN @db.Text y SIN Json

  @@map("settings")
}
